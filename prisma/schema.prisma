// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ... your models (PR, Contributor) below ...
model PR {
  id         Int      @id @default(autoincrement())
  repo       String
  prNumber   Int
  headSha    String
  title      String
  author     String
  score      Int?
  summary    String?
  categories Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([repo, prNumber])
}

model Contributor {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  metrics    Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
